            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Sistema">
            <items>
                  <MenuItem mnemonicParsing="false" onAction="#viewAtualizacao" text="Atualizações" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Sobre">
            <items>
              <MenuItem mnemonicParsing="false" text="Desenvolvedor" />
            </items>
          </Menu>
